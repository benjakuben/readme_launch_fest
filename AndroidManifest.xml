<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamtreehouse.readme"
    android:versionCode="2"
    android:versionName="1.0.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.teamtreehouse.readme.ReadMeApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light" >
        <activity
            android:name="com.teamtreehouse.readme.LoginOrSignupActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.teamtreehouse.readme.AuthenticateActivity"
            android:label="@string/title_activity_authenticate" >
        </activity>
        <activity
            android:name="com.teamtreehouse.readme.MainFeedActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.teamtreehouse.readme.SelectUsersActivity"
            android:label="@string/title_activity_select_users" >
        </activity>
        <activity
            android:name="com.teamtreehouse.readme.AddLinkActivity"
            android:label="@string/title_activity_add_link" >
        </activity>
    </application>

</manifest>